<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jvillad.starwars.android.presentation.search.SearchFragment"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.jvillad.starwars.android.presentation.search.CharacterDetailsFragment"
        tools:layout="@layout/fragment_character_details" >

        <action
            android:id="@+id/action_characterDetailsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>

</navigation>
