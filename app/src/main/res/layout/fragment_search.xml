<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.search.SearchFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/characterSearchView"
        style="@style/SearchView"
        android:layout_marginTop="@dimen/margin_small"
        android:inputType="textCapWords"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/character_search_hint" />

    <View
        android:id="@+id/searchDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_normal_size"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/characterSearchView" />

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/charactersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/margin_x_large"
        android:paddingVertical="@dimen/margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchDivider"
        tools:listitem="@layout/item_character" />

    <ViewStub
        android:id="@+id/loadingViewStub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inflatedId="@+id/layoutLoading"
        android:layout="@layout/layout_search_loading"
        app:layout_constraintBottom_toBottomOf="@id/charactersRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/charactersRecyclerView"
        app:layout_constraintStart_toStartOf="@id/charactersRecyclerView"
        app:layout_constraintTop_toTopOf="@id/charactersRecyclerView" />

    <ViewStub
        android:id="@+id/emptyCharactersSearchViewStub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inflatedId="@+id/layoutEmptyCharactersSearch"
        android:layout="@layout/layout_empty_characters_search"
        app:layout_constraintBottom_toBottomOf="@id/charactersRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/charactersRecyclerView"
        app:layout_constraintStart_toStartOf="@id/charactersRecyclerView"
        app:layout_constraintTop_toTopOf="@id/charactersRecyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>
